<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.jonathanfinerty.expandabletextview.ExpandableTextView
        android:id="@+id/expandingTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/longText" />

    <com.jonathanfinerty.expandabletextview.ExpandableTextViewToggle
        android:id="@+id/expandingToggle"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        app:collapseDrawable="@android:drawable/arrow_up_float"
        app:collapseText="less"
        app:collapsibleTextView="@+id/expandingTextView"
        app:expandDrawable="@android:drawable/arrow_down_float"
        app:expandText="more"
        tools:text="more" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>